{
  "manifest_version": 3,
  "name": "Accessibilify",
  "version": "1.0",
  "description": "Turn any website into an accessible one.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "offscreen",
    "scripting",
    "sidePanel",
    "storage",
    "tabCapture",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Accessibilify",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contentScript.js"]
    }
  ],
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "commands": {
    "analysePage": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Perform text-based command for the current page."
    },
    "voiceCommandRecord": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "windows": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Start recording voice command."
    },
    "voiceCommandExecute": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "windows": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Execute the voice command."
    },
    "showWelcomeScreen": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "windows": "Ctrl+Shift+W",
        "mac": "Command+Shift+W"
      },
      "description": "Show the welcome/setup screen."
    }
  }
}
