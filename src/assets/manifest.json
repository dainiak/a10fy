{
  "manifest_version": 3,
  "name": "A10fy",
  "version": "1.0",
  "description": "Access the web. Better.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "offscreen",
    "scripting",
    "sidePanel",
    "storage",
    "tabCapture",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "sandbox": {
    "pages": ["sandbox.html", "customPlayerSandbox.html"]
  },
  "options_page": "settings.html",
  "content_security_policy": {
      "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Accessibilify",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contentScript.js"]
    }
  ],
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "commands": {
    "textCommandGetThenExecute": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Perform text-based command for the current page."
    },
    "voiceCommandRecordThenExecute": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "windows": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Start recording voice command."
    },
    "voiceCommandStopRecording": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "windows": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Execute the voice command."
    },
    "showSettingsPage": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "windows": "Ctrl+Shift+W",
        "mac": "Command+Shift+W"
      },
      "description": "Show the welcome/settings screen."
    }
  }
}
