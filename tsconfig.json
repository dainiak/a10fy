{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["dom", "es2022"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./tmp"
  },
  "include": ["src/**/*.ts"]
}